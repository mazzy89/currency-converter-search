{
  "name": "currency-converter-search",
  "version": "1.0.0",
  "description": "Microservice to search updated currency value",
  "keywords": [
    "microservice",
    "currency",
    "seneca"
  ],
  "main": "dist/srv/search.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/mazzy89/currency-converter-search.git"
  },
  "author": "Salvatore Mazzarino <apocalipse89@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "postinstall": "better-npm-run postinstall",
    "test": "better-npm-run test",
    "watch:test": "ava --watch",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "betterScripts": {
    "postinstall": {
      "command": "babel lib -d dist",
      "env": {
        "BABEL_ENV": "production"
      }
    },
    "test": {
      "command": "nyc ava",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "nyc": {
    "exclude": [
      "test",
      "test{,-*}.js",
      "**/*.test.js",
      "**/__tests__/**",
      "config/**/*.js"
    ]
  },
  "ava": {
    "failFast": true,
    "babel": "inherit",
    "require": [
      "babel-core/register",
      "babel-polyfill"
    ],
    "verbose": true
  },
  "dependencies": {
    "bluebird": "3.4.1",
    "getconfig": "3.0.0",
    "lodash": "4.13.1",
    "proxyquire": "1.7.9",
    "request-promise": "3.0.0",
    "seneca": "2.1.0"
  },
  "devDependencies": {
    "ava": "0.15.2",
    "babel-cli": "6.10.1",
    "babel-eslint": "6.0.4",
    "babel-plugin-transform-async-to-generator": "6.8.0",
    "babel-polyfill": "6.9.1",
    "babel-preset-es2015": "6.9.0",
    "babel-register": "6.9.0",
    "better-npm-run": "0.0.9",
    "coveralls": "2.11.9",
    "eslint": "2.13.1",
    "eslint-config-seneca": "2.0.0",
    "eslint-plugin-babel": "3.2.0",
    "eslint-plugin-hapi": "4.0.0",
    "eslint-plugin-standard": "1.3.2",
    "nyc": "6.6.1",
    "sinon": "1.17.4",
    "sinon-as-promised": "4.0.0",
    "tap-xunit": "1.4.0"
  },
  "engines": {
    "node": ">=6.0.0"
  }
}
