{
  "name": "currency-converter-search",
  "version": "1.0.0",
  "description": "Microservice to search updated currency value",
  "keywords": [
    "microservice",
    "currency"
  ],
  "main": "dist/srv/search.js",
  "author": "Salvatore Mazzarino <apocalipse89@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "build": "BABEL_ENV=production ./node_modules/.bin/babel lib -d dist",
    "test": "NODE_ENV=test ./node_modules/.bin/nyc ./node_modules/.bin/ava",
    "watch:test": "./node_modules/.bin/ava --watch",
    "coverage": " ./node_modules/.bin/nyc report --reporter=text-lcov | ./node_modules/.bin/coveralls"
  },
  "nyc": {
    "exclude": [
      "test",
      "test{,-*}.js",
      "**/*.test.js",
      "**/__tests__/**",
      "config/**/*.js"
    ]
  },
  "ava": {
    "failFast": true,
    "babel": "inherit",
    "require": [
      "babel-core/register",
      "babel-polyfill"
    ],
    "verbose": true
  },
  "dependencies": {
    "babel-cli": "6.10.1",
    "bluebird": "3.4.0",
    "eslint": "2.12.0",
    "getconfig": "3.0.0",
    "lodash": "^4.13.1",
    "nyc": "6.6.1",
    "proxyquire": "1.7.9",
    "request-promise": "3.0.0",
    "seneca": "2.1.0"
  },
  "devDependencies": {
    "ava": "0.15.2",
    "babel-cli": "6.10.1",
    "babel-eslint": "6.0.4",
    "babel-plugin-transform-async-to-generator": "6.8.0",
    "babel-polyfill": "6.9.1",
    "babel-preset-es2015": "6.9.0",
    "babel-register": "6.9.0",
    "coveralls": "2.11.9",
    "eslint": "2.12.0",
    "eslint-config-seneca": "2.0.0",
    "eslint-plugin-babel": "3.2.0",
    "eslint-plugin-hapi": "4.0.0",
    "eslint-plugin-standard": "1.3.2",
    "nyc": "6.6.1",
    "sinon": "1.17.4",
    "sinon-as-promised": "4.0.0"
  },
  "engines": {
    "node": ">=6.0.0"
  }
}
