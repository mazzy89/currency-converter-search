{
  "name": "currency-converter-search",
  "version": "1.0.0",
  "description": "Microservice to search updated currency value",
  "keywords": [
    "microservice",
    "currency",
    "seneca"
  ],
  "main": "dist/srv/search.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/mazzy89/currency-converter-search.git"
  },
  "author": "Salvatore Mazzarino <apocalipse89@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "postinstall": "better-npm-run postinstall",
    "test": "better-npm-run test",
    "watch:test": "ava --watch",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "betterScripts": {
    "postinstall": {
      "command": "babel src -d dist",
      "env": {
        "BABEL_ENV": "production"
      }
    },
    "test": {
      "command": "nyc ava",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "nyc": {
    "exclude": [
      "test",
      "test{,-*}.js",
      "**/*.test.js",
      "**/__tests__/**",
      "config/**/*.js"
    ]
  },
  "ava": {
    "failFast": true,
    "babel": "inherit",
    "require": [
      "babel-core/register",
      "babel-polyfill"
    ],
    "verbose": true
  },
  "dependencies": {
    "bluebird": "^3.4.1",
    "colors": "^1.1.2",
    "getconfig": "^3.0.0",
    "joi": "^9.0.4",
    "lodash": "^4.14.1",
    "request-promise": "^4.1.0",
    "seneca": "^3.2.2",
    "seneca-as-promised": "^2.0.0",
    "seneca-entity": "^1.2.0",
    "seneca-joi": "^1.0.0"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-cli": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-async-to-generator": "^6.8.0",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.11.6",
    "better-npm-run": "^0.0.10",
    "coveralls": "2.11.9",
    "eslint": "^3.2.2",
    "eslint-config-seneca": "^2.0.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-hapi": "^4.0.0",
    "eslint-plugin-standard": "^2.0.0",
    "nyc": "^7.1.0",
    "sinon": "^1.17.5",
    "sinon-as-promised": "^4.0.2",
    "tap-xunit": "^1.4.0"
  },
  "engines": {
    "node": ">=6.0.0"
  }
}
