{
  "name": "currency-converter-search",
  "version": "1.0.0",
  "description": "Microservice to search updated currency value",
  "keywords": [
    "microservice",
    "currency"
  ],
  "main": "dist/srv/search.js",
  "author": "Salvatore Mazzarino <apocalipse89@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "build": "./node_modules/.bin/babel lib -d dist",
    "test": "nyc ava",
    "watch:test": "ava --watch",
    "report": " ./node_modules/.bin/nyc report --reporter=text-lcov | ./node_modules/.bin/coveralls",
    "deploy": "npm install && npm build"
  },
  "nyc": {
    "exclude": [
      "test",
      "test{,-*}.js",
      "**/*.test.js",
      "**/__tests__/**",
      "config/**/*.js"
    ]
  },
  "ava": {
    "failFast": true,
    "babel": "inherit",
    "require": [
      "babel-core/register",
      "babel-polyfill"
    ],
    "verbose": true
  },
  "dependencies": {
    "bluebird": "3.4.0",
    "getconfig": "3.0.0",
    "joi": "8.4.1",
    "proxyquire": "1.7.9",
    "request-promise": "3.0.0",
    "seneca": "2.1.0",
    "seneca-joi": "^0.2.0"
  },
  "devDependencies": {
    "ava": "0.15.2",
    "babel-cli": "6.9.0",
    "babel-eslint": "6.0.4",
    "babel-plugin-transform-async-to-generator": "6.8.0",
    "babel-polyfill": "6.9.1",
    "babel-preset-es2015": "6.9.0",
    "babel-register": "6.9.0",
    "coveralls": "^2.11.9",
    "eslint": "2.11.1",
    "eslint-config-seneca": "2.0.0",
    "eslint-plugin-babel": "3.2.0",
    "eslint-plugin-hapi": "4.0.0",
    "eslint-plugin-standard": "1.3.2",
    "nyc": "6.4.4"
  },
  "engines": {
    "node": ">=6.0.0"
  }
}
